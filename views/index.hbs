<a href="/new">
    <h3>Create new Recipe</h3>
</a>
{{#each recipes }}
<div class="six coulmns recipeContainer">
    <h3>{{this.title}}</h3>
    <ul>
        <h5>Description</h5>
        <li>{{this.description}}</li>
        <h5>Instructions</h5>
        <li>{{this.instructions}}</li>
        <h5>Ingredients</h5>
        <ul>{{#each this.ingredients}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </ul>
    <a href={{this._id}}><button class="button-primary">view</button></a>
    {{/each}}
</div>